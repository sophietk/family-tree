{{#_id}}
  <div class="row">
    <div class="col m9">&nbsp;</div>
    <div class="col m3 s12">
      <a href="#people/{{.}}" class="waves-effect waves-light btn">
        {{p 'menu.view'}}
        <i class="material-icons right">remove_red_eye</i></a>
    </div>
  </div>
{{/_id}}

<form class="col s12">
  <div class="row">
    <div class="input-field col s6">
      <input name="lastName" id="lastName" type="text" class="validate" value="{{lastName}}">
      <label for="lastName" class="{{#if lastName}}active{{/if}}">{{p 'last_name'}}</label>
    </div>
    <div class="input-field col s6">
      <input name="firstName" id="firstName" type="text" class="validate" value="{{firstName}}">
      <label for="firstName" class="{{#if firstName}}active{{/if}}">{{p 'first_name'}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col s3">
      <label>
        <input name="gender" class="with-gap" type="radio" value="M" {{#isMale}} checked="checked" {{/isMale}}>
        <span>{{p 'male'}}</span>
      </label>
    </div>
    <div class="col s3">
      <label>
        <input name="gender" class="with-gap" type="radio" value="F" {{^isMale}} checked="checked" {{/isMale}}>
        <span>{{p 'female'}}</span>
      </label>
    </div>
    <div class="input-field col s6 js-maidenNameBlock">
      <input name="maidenName" id="maidenName" type="text" value="{{maidenName}}">
      <label for="maidenName" class="{{#if maidenName}}active{{/if}}">{{p 'maiden_name'}}</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <input name="birthDate" id="birthDate" type="date" value="{{birthDate}}">
      <label for="birthDate" class="active">{{p 'birth_date'}}</label>
    </div>
    <div class="input-field col s6">
      <input name="deathDate" id="deathDate" type="date" value="{{deathDate}}">
      <label for="deathDate" class="active">{{p 'death_date'}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <label for="fatherId">{{p 'father'}}</label>
      <select name="fatherId" id="fatherId" class="browser-default">
        <option value="" selected>-</option>
        {{#men}}
          {{> peopleOption.partial.hbs}}
        {{/men}}
      </select>
    </div>
    <div class="col s6">
      <label for="motherId">{{p 'mother'}}</label>
      <select name="motherId" id="motherId" class="browser-default">
        <option value="" selected>-</option>
        {{#women}}
          {{> peopleOption.partial.hbs}}
        {{/women}}
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <label>{{p 'spouses'}}</label>
      <a class="btn-floating btn-small btn-left waves-effect waves-light js-addSpouse">
        <i class="material-icons">add</i>
      </a>
      <a class="btn-floating btn-small btn-right waves-effect waves-light js-removeSpouse">
        <i class="material-icons">remove</i>
      </a>

      <div class="js-spousesBlock">
        {{#spousesIds}}
          <select name="spouse" class="browser-default">
            <option value="" selected>-</option>
            {{#../people}}
              {{> peopleOption.partial.hbs}}
            {{/../people}}
          </select>
        {{/spousesIds}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input name="avatarUrl" id="avatarUrl" type="text" value="{{avatarUrl}}">
      <label for="avatarUrl" class="{{#avatarUrl}}active{{/avatarUrl}}">{{p 'people.edit.avatar'}}</label>
      {{#_id}}
        <a href="#" class="right js-avatarUpload"><i class="material-icons tiny">file_upload</i> {{p 'people.edit.upload'}}</a>
        {{else}}
          <span class="helper-text">{{p 'people.edit.avatar.helper'}}</span>
      {{/_id}}
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <i class="material-icons prefix">mode_edit</i>
      <textarea name="about" id="about" class="materialize-textarea edit-about">{{{about}}}</textarea>
      <label for="about" class="{{#if about}}active{{/if}}">{{p 'people.edit.about'}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <label>
        <input name="menuTab" type="checkbox" {{#menuTab}} checked="checked" {{/menuTab}}>
        <span>{{p 'people.edit.pinned'}}</span>
      </label>
    </div>
  </div>

  <div class="row">
    <a class="btn waves-effect waves-light js-save">{{p 'save'}}
      <i class="material-icons right">send</i>
    </a>

    {{#_id}}
      <a class="btn waves-effect waves-light js-delete">{{p 'delete'}}
        <i class="material-icons right">delete</i>
      </a>
    {{/_id}}
  </div>
</form>

<div id="deleteModal" class="modal">
  <div class="modal-content">
    <h4>{{p 'people.edit.delete.confirm.title' .}}</h4>

    <p>{{p 'people.edit.delete.confirm.text'}}</p>
  </div>
  <div class="modal-footer">
    <a class="waves-effect waves-green btn-flat modal-close">{{p 'no'}}</a>
    <a class="waves-effect waves-green btn-flat modal-close js-delete-confirm">{{p 'yes'}}</a>
  </div>
</div>
