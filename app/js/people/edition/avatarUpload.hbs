<div class="modal-content">
  <h4>{{p 'people.avatar.title' .}}</h4>

  <p>{{p 'people.avatar.text'}}</p>

  <form action="#">
    <div class="file-field input-field">
      <div class="btn">
        <span>{{p 'people.avatar.file'}}</span>
        <input type="file" class="js-avatarFile" accept="image/*">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
    <div class="progress avatar-progress">
      <div class="determinate" style="width: 0"></div>
    </div>
  </form>
</div>
<div class="modal-footer">
  <a class="waves-effect waves-green btn-flat modal-close">{{p 'cancel'}}</a>
  <a class="waves-effect waves-green btn-flat js-avatarUpload-save disabled">{{p 'save'}}</a>
</div>
