<div class="modal-content">
    <h4>{{p 'people.avatar.title' .}}</h4>

    <p>{{p 'people.avatar.text'}}</p>

    <form action="#">
        <div class="file-field input-field">
            <input class="file-path validate js-avatarPath" type="text" disabled="disabled"/>

            <div class="progress">
                <div class="determinate" style="width: 0"></div>
            </div>
            <div class="btn">
                <span>{{p 'people.avatar.file'}}</span>
                <input type="file" class="js-avatarFile"/>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <a class="waves-effect waves-green btn-flat modal-action modal-close js-avatarUpload-cancel">{{p 'cancel'}}</a>
    <a class="waves-effect waves-green btn-flat js-avatarUpload-save disabled">{{p 'save'}}</a>
</div>